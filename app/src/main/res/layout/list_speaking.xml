<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listSpeaking_PAR"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/listSpeaking_MTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        android:elevation="0dp"
        app:cardBackgroundColor="#e7ffdb"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/listSpeaking_LBL_msg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/helvetica"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:text="Hi how are you?"
                android:textColor="#5B5252"
                android:textSize="13dp" />


            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/listSpeaking_LBL_calender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:fontFamily="@font/helvetica"
                    android:gravity="start|center_vertical"
                    android:text="21:46"
                    android:textColor="#5B5252"
                    android:textSize="12dp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical">

                    <ImageView
                        android:id="@+id/listSpeaking_IC_vi1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="start"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/helvetica"
                        android:src="@drawable/ic_readed" />

                    <ImageView
                        android:id="@+id/listSpeaking_IC_vi2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="start"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/helvetica"
                        android:src="@drawable/ic_readed" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>