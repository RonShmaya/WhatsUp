<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="30dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:src="@drawable/whatup_back" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:textColor="#5B5252"
            android:fontFamily="@font/helvetica_bold"
            android:text="Welcome to WhatsUp"
            android:textSize="25dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_BTN_login"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#008069"
            android:text="Register"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:cornerRadius="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_TIL_lan"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/helvetica"
            android:hint="@string/LANG_TAG"
            android:outlineSpotShadowColor="#008069"
            android:textColorHint="#008069"
            android:outlineAmbientShadowColor="#008069"
            app:boxStrokeColor="#008069"
            app:startIconDrawable="@drawable/ic_lang"
            app:boxStrokeWidth="0dp"
            app:hintTextColor="#008069">

            <AutoCompleteTextView
                android:id="@+id/login_ACTV_lan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica"
                android:inputType="none"
                android:textColorHint="#008069"
                android:textColorLink="#008069"
                android:outlineSpotShadowColor="#008069"
                android:textColorHighlight="#008069"
                android:outlineAmbientShadowColor="#008069"
                android:shadowColor="#008069"
                android:textColor="#008069"
                android:textSize="17sp" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</RelativeLayout>